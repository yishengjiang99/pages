{
  "name": "finalcut-puppeteer-tests",
  "version": "1.0.0",
  "description": "Puppeteer tests for the FinalCut video editor application",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "puppeteer": "^23.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
